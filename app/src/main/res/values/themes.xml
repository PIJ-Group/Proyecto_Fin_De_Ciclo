<resources>
    <!-- Base application theme. -->
    <style name="Theme.Reminder" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_principal</item>
        <item name="colorPrimaryVariant">@color/blue_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_dark</item>
        <item name="colorSecondaryVariant">@color/pink_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue_principal</item>
        <!-- textColor: lightTheme -->
        <item name="android:textColor">@color/black</item>
        <!-- Type of Font -->
        <item name="android:fontFamily">@font/infinity_regular</item>
    </style>
</resources>